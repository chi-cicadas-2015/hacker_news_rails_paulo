<% provide(:title, 'Sign up') %>
<h1>Sign up here</h1>

<div class="row">
  <div class="col">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create your account"%>

    <% end %>
  </div>
</div>
